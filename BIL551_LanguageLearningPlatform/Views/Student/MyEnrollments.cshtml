@model List<Enrollment>
<h2>My Enrollments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Course</th>
            <th>Teacher</th>
            <th>Language</th>
            <th>Enrolled At</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var enrollment in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Student" asp-action="ViewCourse" asp-route-id="@enrollment.CourseID">
                        @enrollment.Course?.Title
                    </a>
                </td>
                <td>@enrollment.Course?.Teacher?.FullName</td>
                <td>@enrollment.Course?.Language?.Name</td>
                <td>@enrollment.EnrolledAt.ToString("g")</td>
                <td>
                    <form asp-controller="Student" asp-action="Unenroll" asp-route-courseId="@enrollment.CourseID" method="post" onsubmit="return confirm('Are you sure you want to unenroll from this course?');">
                        <button type="submit" class="btn btn-danger btn-sm">Unenroll</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
